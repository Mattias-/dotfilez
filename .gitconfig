[user]
    name = Mattias Appelgren
    email = mattias@ppelgren.se
[core]
    editor = vim
    pager = less --quit-if-one-screen
    excludesfile = ~/.gitignore_global
[credential]
    helper = cache --timeout=3600
[diff]
    algorithm = patience
[color]
    branch = auto
    diff = auto
    status = auto
    ui = auto
[push]
    default = simple
[merge]
    ff = no
[pull]
    rebase = true
[alias]
    s = status
    lg = log --graph --pretty=format:'%Cred%h%C(yellow)%d%Creset %s %Cgreen(%cr) %an %Creset'
    lgh = log -10 --graph --pretty=format:'%Cred%h%C(yellow)%d%Creset %s %Cgreen(%cr) %an %Creset'
