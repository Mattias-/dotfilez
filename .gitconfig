[user]
    name = Mattias Appelgren
    email = mattias@ppelgren.se
[core]
    editor = vim
    excludesfile = ~/.gitignore_global
[credential]
    helper = cache --timeout=3600
[diff]
    algorithm = patience
[color]
    branch = auto
    diff = auto
    status = auto
    ui = auto
[push]
    default = simple
[merge]
    ff = no
    tool = vimdiff
[pull]
    rebase = true
[rerere]
    enabled = true
    autoupdate = true
[alias]
    lg = log --graph --pretty=format:'%Cred%h%C(yellow)%d%Creset %s %Cgreen(%cr) %an %Creset'
    lgh = log -10 --graph --pretty=format:'%Cred%h%C(yellow)%d%Creset %s %Cgreen(%cr) %an %Creset'
[pager]
    lgh = less --QUIT-AT-EOF
