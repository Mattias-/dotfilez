[user]
    name = Mattias Appelgren
    email = mattias@ppelgren.se
[core]
    editor = vi
    excludesfile = ~/.gitignore_global
[credential]
    helper = cache --timeout=3600
[diff]
    algorithm = patience
[color]
    branch = auto
    diff = auto
    status = auto
    ui = auto
[push]
    default = simple
[merge]
    ff = no
    tool = vimdiff
[pull]
    rebase = true
[rerere]
    enabled = true
    autoupdate = true
[alias]
    lg = log --graph --pretty=format:'%C(auto)%h%d %s %Cgreen(%cr) %Cblue%an%Creset'
    lgh = log -10 --graph --pretty=format:'%C(auto)%h%d %s %Cgreen(%cr) %Cblue%an%Creset'
    assume = update-index --assume-unchanged
    unassume = update-index --no-assume-unchanged
    shw = "!f() { PAT=$1 && shift && git show $(git rev-list HEAD --max-count=20 | grep -m1 ^$PAT) $@; }; f"
[pager]
    lgh = less --QUIT-AT-EOF
