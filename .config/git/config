[user]
    name = Mattias Appelgren
    email = mattias@ppelgren.se
[includeIf "gitdir:~/work/"]
    path = ~/.config/git/extraconfig
[core]
    editor = vi
    attributesfile = ~/.config/git/gitattributes_global
[credential]
#    helper = cache --timeout=3600
    helper = osxkeychain
[diff]
    algorithm = histogram
    colormoved = "default"
    colormovedws = "allow-indentation-change"
    mnemonicPrefix = true
    renames = true
    tool = difftastic
[difftool]
    prompt = false
[difftool "difftastic"]
    cmd = difft "$LOCAL" "$REMOTE"
[color]
    branch = auto
    diff = auto
    status = auto
    ui = auto
[push]
    default = simple
    autoSetupRemote = true
[mergetool]
    keepBackup = false
[mergetool "nvimdiff"]
    cmd = nvim -d $LOCAL $REMOTE $MERGED
[merge]
    ff = no
    tool = nvimdiff
[rebase]
    autoSquash = true
    autoStash = true
[init]
    defaultBranch = main
[pull]
    rebase = true
[rerere]
    enabled = true
    autoupdate = true
[alias]
    lg = log --graph --pretty=format:'%C(auto)%h%d %s %Cgreen(%cr) %Cblue%an %C(yellow)%G?'
    lgh = lg -10
    assume = update-index --assume-unchanged
    unassume = update-index --no-assume-unchanged
    shw = "!f() { git show $(git rev-list HEAD --max-count=20 | grep -m1 ^$1) ${@:2}; }; f"
    grepblame = "!ggb() { git grep -n $@ | while IFS=: read i j k; do git blame -f -L $j,$j $i; done }; ggb"
    wtrm = "!f() { git worktree remove $(git worktree list | fzf --accept-nth 1); }; f"
    wtadd = "!f() { git worktree add ../wt/$1; }; f"

[pager]
    lgh = less --QUIT-AT-EOF
    difftool = true
[gpg]
    format = ssh
[gpg "ssh"]
    allowedSignersFile = ~/.config/git/allowed_signers
    defaultKeyCommand = ssh-add -L
[commit]
    gpgsign = true
    verbose = true
[tag]
    gpgsign = true

