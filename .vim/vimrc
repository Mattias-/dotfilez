execute pathogen#infect()

let g:airline_powerline_fonts = 1
let g:airline_left_sep=''
let g:airline_right_sep=''

map <C-n> :NERDTreeToggle<CR>
let NERDTreeIgnore = ['\.pyc$']

set rtp+=/usr/local/Cellar/fzf/HEAD
map <C-p> :FZF<CR>

syntax on
set background=dark

if has("nvim") && match($TERM, "screen") == -1
  let $NVIM_TUI_ENABLE_TRUE_COLOR=1
  colorscheme base16-default
  " The default comment hl is really really bad
  highlight! link Comment Special
else
  set t_Co=256
  colorscheme desert256
endif

set number
set ruler
set laststatus=2
set showcmd
set cursorline
set backspace=2
set scrolloff=5

set noswapfile

set splitright
set splitbelow

" Autocomplete filenames
set wildmenu
set wildignore=*.o,*.hi,*.pyc,*.pdf

" Searching
set hlsearch
set incsearch
set ignorecase
set smartcase

" Tabs and indents
set tabstop=4
set softtabstop=4 " Make spaces feel like real tabs
set expandtab " When pressing tab, insert [tabstop] spaces
set shiftwidth=4 " When indenting use x spaces
set autoindent " Keep indentation from previous line

" Folding
set foldmethod=indent
set foldlevelstart=20

" Highlight whitespace errors and line length
autocmd BufWinEnter * match Error /\s\+$/
autocmd InsertLeave * match Error /\s\+$/
set colorcolumn=80

filetype indent on
filetype plugin on

let python_highlight_all=1

let mapleader = "\<Space>"
map <leader>w :set wrap!<cr>
map <leader>p :set paste!<cr>
map <leader>l :set number!<cr>
map <leader>s :setlocal spell! spelllang=en_us<cr>
map <leader><space> za

if has("nvim")
    tnoremap <Esc> <C-\><C-n>
endif
