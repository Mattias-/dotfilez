hardstatus alwayslastline
hardstatus string '%{= kG}%{G}%H %{g}%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}%{B} %d/%m %{W}%c %{g}'

caption splitonly
caption string "%{wk}%3n %t"

defscrollback 5000
startup_message off

escape "^  "
autodetach on
shell -$SHELL
shelltitle "$ |bash"

setenv SSH_AUTH_SOCK $HOME/.ssh/ssh_auth_sock
