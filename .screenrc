
backtick 1 240 240 echo $STY
hardstatus alwayslastline
hardstatus string '%{= kb}%1`@%H%{= kw} %= %-w%{kr}%n%f %t%{-}%+w %= %{= kb}%Y-%m-%d %c'

caption splitonly
caption string "%{= kw}%?%F%{= kr}%?%n %t"

defscrollback 5000
startup_message off

escape "^  "
autodetach on
shell -$SHELL
shelltitle "$ |bash"

setenv SSH_AUTH_SOCK $HOME/.ssh/ssh_auth_sock
