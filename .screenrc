
backtick 1 240 240 date +%Z
hardstatus alwayslastline
hardstatus string '%{= kb}%S@%H%{= kw} %= %-Lw%{kr}%n*%f %t%{-}%+Lw %= %{= kb}%Y-%m-%d %c %1`'

caption splitonly
caption string "%{= kw}%?%F%{= kr}%?%n %t"

defscrollback 5000
startup_message off

escape "^  "
autodetach on
shell -$SHELL
shelltitle "$ |bash"
