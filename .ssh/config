Include config.d/*

Host *
  ServerAliveInterval 60
  ServerAliveCountMax 120
  HashKnownHosts no
  AddKeysToAgent yes
  StrictHostKeyChecking accept-new

Host i-*
  ProxyCommand sh -c "aws ec2-instance-connect send-ssh-public-key --instance-id %h --availability-zone $(aws ec2 describe-instances --instance-id %h --output text --query 'Reservations[].Instances[].Placement.AvailabilityZone') --instance-os-user ec2-user --ssh-public-key file://~/.ssh/id_ed25519.pub && aws ssm start-session --target %h --document-name AWS-StartSSHSession --parameters 'portNumber=%p'"
